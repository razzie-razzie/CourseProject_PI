@model CourseProject.Dish

@{
    ViewBag.Title = "Удаление блюда";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page_header">Удаление блюда</h2>

<h3>Вы уверены, что хотите удалить это блюдо?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Display("Имя:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.Display("Цена:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            @Html.Display("Тип:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DishesType.Type)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Да, удалить" class="btn btn-default" />
            @Html.ActionLink("Нет, вернуться назад", "Index", "Dishes", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
