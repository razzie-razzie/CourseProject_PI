@model CourseProject.IngredientsCategory

@{
    ViewBag.Title = "Удаление категории ингредиента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page_header">Удаление категории ингредиента</h2>

<h3>Вы уверены, что хотите удалить эту категорию?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Название категории: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category_Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Да, удалить" class="btn btn-default" />
            @Html.ActionLink("Нет, вернуться назад", "Index", "IngredientsCategories", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
