@model IEnumerable<CourseProject.Ingredient>

@{
    ViewBag.Title = "Список ингредиентов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page_header">Список ингредиентов</h2>
<br />
<table class="my_table">
    <tr class=".my_table .header-line">
        <th>
            @Html.DisplayName("Название ингредиента")
        </th>
        <th>
            @Html.DisplayName("Категория")
        </th>
        <th>
            @Html.DisplayName("Вес, г")
        </th>
        <th>
            @Html.DisplayName("Наличие")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientsCategory.Category_Name)
            </td>
            <td class="number">
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>

            <td>
                @Html.ActionLink("Просмотреть", "Details", new { id = item.ID }) |
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Назад", "Index", "Home")
</div>