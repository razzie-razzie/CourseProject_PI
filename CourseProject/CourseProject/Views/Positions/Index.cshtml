@model IEnumerable<CourseProject.Position>

@{
    ViewBag.Title = "Список позиций блюд";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page_header">Список позиций блюд</h2>

<table class="my_table">
    <tr class=".my_table .header-line">
        <th>
            @Html.DisplayName("Название позиции")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }, new { @class = "table_buttons" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID }, new { @class = "table_buttons" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Назад", "Index", "Home")
</div>